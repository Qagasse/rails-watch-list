<h1>Lists#show</h1>
<p><%= @list.name %></p>

<h2>Bookmarks</h2>

<ul>
    <% @list.bookmarks.each do |bookmark| %>
        <li><%= image_tag bookmark.movie.poster_url, alt: "alttext", width: 200 %>
<%= bookmark.movie.title %>: <%= bookmark.comment  %> <%= link_to "Destroy", bookmark_path(bookmark), method: :delete, data: {confirm: "Are you sure"} %></li>
    <% end %>
</ul>

<%= link_to "Back to list", lists_path  %>
<%= link_to "Add Bookmark", new_list_bookmark_path(@list)  %>



