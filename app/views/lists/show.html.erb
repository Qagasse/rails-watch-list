<h1>Lists#show</h1>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
  <%= @list.name %>
</div>
<p></p>

<h2>Bookmarks</h2>

<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <%= image_tag bookmark.movie.poster_url, alt: "alttext", width: 200%>
      <div class="card-trip-infos">
        <div>
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.comment  %></p>
        </div>
        <h2 class="card-trip-pricing"><%= link_to "Destroy", bookmark_path(bookmark), method: :delete, data: {confirm: "Are you sure"} %></h2>   
        
      </div>
    </div>
  <% end %>
</div>




    


<%= link_to "Back to list", lists_path  %>
<%= link_to "Add Bookmark", new_list_bookmark_path(@list)  %>



