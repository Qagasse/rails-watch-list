
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://fr.web.img2.acsta.net/r_1280_720/newsv7/21/12/27/19/55/3679527.jpg);">
  <div class="container">
    <h1>Save any kind of Movies</h1> 
    <%= link_to "New list", new_list_path, class: "btn btn-success" %>   
  </div>
</div>




<ul>
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
        <li><div class="card-category" id="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
      <% end %>
      <%= link_to list.name, list  %>
      <h2 class="delete"><%= link_to "X", list_path(list), method: :delete, data: {confirm: "Are you sure"}  %></h2>
      
</div></li>
  
  <% end %>
</ul>



  



